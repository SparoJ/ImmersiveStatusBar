<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.pingan.apple.immersivestatusbar.widget.CircleImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/civ_item_pine_stick"
            android:layout_width="44dp"
            android:paddingLeft="8dp"
            android:layout_height="44dp"/>
        <TextView
            android:gravity="center"
            android:text="pine stick"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:id="@+id/tv_item_pine_stick"
            android:layout_width="wrap_content"
            android:layout_height="44dp"/>

        <View
            android:layout_below="@id/civ_item_pine_stick"
            android:background="#99000000"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            />
    </RelativeLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_item_pine_stick"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>
    <View
        android:background="#99000000"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        />

</LinearLayout>